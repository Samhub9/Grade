//Program to display grade of a student based on mark
#include<stdio.h>
int main()
{
	float mark; //declaration
	printf("Enter your mark: "); //input by user
	scanf("%f",&mark);
	if(mark>=85 && mark<=100) //condition
	{
		printf("Grade A"); //statement will be displayed if true
	}
	else if(mark>=70 && mark<=84)
	{
		printf("Grade B");
	}
	else if(mark>=55 && mark<=69)
	{
		printf("Grade C");
	}
	else if(mark>=40 && mark<=54)
	{
		printf("Grade D");
	}
	else if(mark>=0 && mark<40)
	{
		printf("Grade F");
	}
	else
	{
		printf("Invalid input");
	}
	return 0;
}
